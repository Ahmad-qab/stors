Package: stors
Type: Package
Title: Steps Optimized Rejection Sampling
Version: 0.1.0
Authors@R: c(
    person("Ahmad", "ALQabandi", email = "ahmad.alqabandi@durham.ac.uk",
           role = c("cre", "aut"),
           comment = c(ORCID = "0009-0006-0055-3846")),
    person("Louis", "Aslett", email = "louis.aslett@durham.ac.uk",
